# ==================================================================================== #
# = Executable
# ==================================================================================== #

BIN = sample-algo

# ==================================================================================== #
# = Compiler settings
# ==================================================================================== #

CC      = gcc
CFLAGS += -O3 -fno-tree-vectorize
LIBS   += -lm -lcriterion

# ==================================================================================== #
# = Object Files
# ==================================================================================== #

%.o : %.c
	$(CC) $(CFLAGS) -c $< -o $@

%.s : %.c
	$(CC) $(CFLAGS) -S $< -o $@

SRCS=$(wildcard *.c)

OBJS=$(SRCS:.c=.o)

ASMS=$(SRCS:.c=.s)

all: $(OBJS) $(ASMS)
	$(CC) $(OBJS) -o $(BIN) $(LIBS)

clean:
	rm -rf *.o *.txt *.s
	rm -rf $(BIN)
